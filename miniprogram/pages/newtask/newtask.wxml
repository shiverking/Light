<!--miniprogram/pages/newtask/newtask.wxml-->
<view class="page">
<van-nav-bar
  title='新建任务'
  left-text="返回"
  left-arrow
  bind:click-left="onClickLeft"
/>
<van-cell title="自定义打卡项目" icon="add-o"></van-cell>
<van-cell title="请选择一个推荐的打卡项目" icon="good-job-o" />
<van-tabs animated>
  <!-- 以下项目都只是作为测试用 -->
  <van-tab title="热门">
   <van-cell title="测试一" is-link />
   <van-cell title="测试二" is-link />
   <van-cell title="测试三" is-link />
  </van-tab>
  <van-tab title="健康">
   <van-cell title="测试一" is-link />
   <van-cell title="测试二" is-link />
   <van-cell title="测试三" is-link />
  </van-tab>
  <van-tab title="运动">
   <van-cell title="测试一" is-link />
   <van-cell title="测试二" is-link />
   <van-cell title="测试三" is-link />
  </van-tab>
  <van-tab title="学习">
   <van-cell title="测试一" is-link />
   <van-cell title="测试二" is-link />
   <van-cell title="测试三" is-link />
  </van-tab>
  <van-tab title="我的">
   <van-cell title="测试一" is-link />
   <van-cell title="测试二" is-link />
   <van-cell title="测试三" is-link />
  </van-tab>
</van-tabs>
<van-dialog
  use-slot
  title="标题"
  show="{{ show }}"
  show-cancel-button
  confirm-button-open-type="getUserInfo"
  bind:close="onClose"
  bind:getuserinfo="getUserInfo"
>
 <van-datetime-picker
  type="date"
  value="{{ currentDate }}"
  bind:input="onInput"
  min-date="{{ minDate }}"
  formatter="{{ formatter }}"
/>
</van-dialog>
<van-button type="primary" bindtap="showdialog">时间设置</van-button>
</view>