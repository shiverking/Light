<!--miniprogram/pages/newtask/newtask.wxml-->
<view class="page">
<van-dialog
  use-slot
  title="标题"
  show="{{ show }}"
  show-cancel-button
  confirm-button-open-type="getUserInfo"
  bind:close="onClose"
  bind:getuserinfo="getUserInfo"
>
 <van-datetime-picker
  type="date"
  value="{{ currentDate }}"
  bind:input="onInput"
  min-date="{{ minDate }}"
  formatter="{{ formatter }}"
/>
</van-dialog>
<van-button type="primary" bindtap="showdialog">时间设置</van-button>
</view>