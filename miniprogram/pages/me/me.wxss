.user-card {
  background-color: #fff;
  box-shadow: 0 0 15rpx 0 rgba(0, 0, 0, 0.1);
  position: relative;
  padding-top: 0rpx;
  background-size: contain;
  z-index: 0;
  margin-bottom: 30rpx;
  margin-left: 25rpx;
  margin-right: 25rpx;
  margin-top: 27rpx;
}
.user-card__info{
  padding-top: 195rpx;
}
.user-card__bg {
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  width: 100%;
  height: 268rpx;
  z-index: -1;
}

.user-card__head {
  width: 100rpx;
  height: 100rpx;
  border: 0.5px solid rgb(255, 255, 255);
  border-radius: 50%;
  margin-top: 25rpx;
  margin-left: 18rpx;
  margin-right: 30rpx;
  background-color: #fff;
}

.user-card__name {
  color: rgb(63, 64, 68);
  font-size: 37rpx;
   margin-top: 27rpx;
}
.user-card__links {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1px solid #ccc;
}

.user-card__linkItem {
  flex: 1;
  font-size: 32rpx;
  color: #333;
  text-align: center;
  border-right: 1px dotted #ccc;
  padding: 5rpx 0;
}

.user-card__linkItem:last-child {
  border-right: none;
}

.user-card__linkLabel {
  color: #999;
}

.user-card__linkValue {
  padding-left: 15rpx;
}
.charts-card {
  margin-bottom: 50rpx;
}

.charts-card__header {
  display: block;
  border-left: 8rpx solid #6482DD;
  padding: 20rpx;
  margin-bottom: 20rpx;
  font-size: 32rpx;
  color: #666;
}

.charts-card__body {
  display: block;
  width: 100%;
  height: 350rpx;
  padding: 20rpx;
}

.tips {
  padding: 30rpx;
}
.info-font{
  position: relative;
  font-size: 30rpx;
  top: 15rpx;
  font-weight: 500;
}
.project-title{
  font-weight: 550; 
}
.developer_info{
  font-size: 30rpx;
  color: grey;
}
.circle-position{
  padding-left:30%;
}